<% include ../partials/header %>
<div class="container">
    <div class="row">
       <h1 style="text-align: center">Edit <%= breweries.name %></h1>
        <div style="width:30%; margin: 30px auto;">
        <form action="/breweries/<%= breweries._id %>?_method=PUT" method="POST">
            
            <div class="form-group">
                <input class="form-control" type="text" name="breweries[name]" value= "<%= breweries.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="breweries[price]" valuer="<%= breweries.price %>" min="0.01"step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control"type="text" name="breweries[image]" value= "<%= breweries.image %>">
            </div>
            <div class="form-group">
                <input class="form-control"type="text" name="breweries[description]" value= "<%= breweries.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/Breweries">Go Back</a> 
        </div>
        
    </div>
</div>


<% include ../partials/footer %>